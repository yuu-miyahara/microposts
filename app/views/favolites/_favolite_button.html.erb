<% if current_user.favolite?(micropost) %>
  <%= form_with(model: current_user.favolites.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :favolite_id, micropost.id %>
    <%= f.submit 'Unfavolite', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favolites.build, local: true) do |f| %>
    <%= hidden_field_tag :favolite_id, micropost.id %>
    <%= f.submit 'Favolite', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>